<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Browse Cars | Marketplace</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('partials/navbar', { navItems, search }) %>
  <main class="page">
    <section class="section-head">
      <div>
        <p class="eyebrow">Browse</p>
        <h1>Available cars</h1>
        <p class="lede">Search to find your perfect car.</p>
      </div>
    </section>

    <section class="car-grid">
      <% if (cars.length === 0) { %>
        <div class="empty">
          <p>No cars available in this category right now.</p>
        </div>
      <% } %>
      <% cars.forEach(function(car){ %>
        <article class="card">
          <div class="card-top">
            <span class="status <%= car.Availability %>"><%= car.Availability %></span>
          </div>
          <h3><%= car.Model %></h3>
          <p class="muted"><%= car.Brand %></p>
          <p class="price">$<%= parseFloat(car.Price).toFixed(2) %></p>
          <% if (currentUser) { %>
            <a class="btn primary" href="/">View Details</a>
          <% } else { %>
            <a class="btn ghost" href="/auth/login">Sign in to view</a>
          <% } %>
        </article>
      <% }) %>
    </section>
  </main>
</body>
</html>
