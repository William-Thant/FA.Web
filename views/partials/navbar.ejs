<header class="nav-shell">
  <div class="brand"><a href="/">ðŸš— Car Marketplace</a></div>
  
<nav class="nav-links">
  <a href="/home">Home</a>
  <a href="#cars">Vehicles</a>
  <a href="#services">Services</a>
</nav>

<% if (isAdmin) { %>
  <a class="btn ghost" href="/admin/cars" style="margin-left: 12px;">Manage cars</a>
<% } %>

<form class="search" action="/home" method="get">
  <input name="search" value="<%= search || '' %>" placeholder="Search vehicles..." />
  <button type="submit">Search</button>
</form>
  
  <div class="user-box">
    <% if (currentUser) { %>
      <span class="user-name"><%= currentUser.Name %></span>
      <% if (isAdmin) { %>
        <a class="btn primary" href="/admin/profile" style="padding: 10px 16px; font-size: 13px;">Admin</a>
      <% } else { %>
        <span class="pill role"><%= currentUser.Role %></span>
      <% } %>
      <form action="/auth/logout" method="post" style="display:inline;">
        <button class="btn ghost" type="submit" style="padding: 10px 16px; font-size: 13px;">Logout</button>
      </form>
    <% } else { %>
      <a class="btn primary" href="/auth/login" style="padding: 10px 16px; font-size: 13px;">Login</a>
    <% } %>
  </div>
</header>
